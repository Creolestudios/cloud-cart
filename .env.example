# ============================================================
# CloudCart Environment Configuration
# Copy this file to .env and update values for your environment
# ============================================================

# ── General ──────────────────────────────────────────────────
NODE_ENV=development
LOG_LEVEL=debug
APP_VERSION=1.0.0

# ── API Gateway ──────────────────────────────────────────────
GATEWAY_PORT=80
RATE_LIMIT_PER_MINUTE=100

# ── Auth Service ─────────────────────────────────────────────
AUTH_SERVICE_PORT=4001
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d
BCRYPT_SALT_ROUNDS=12

# ── Product Service ──────────────────────────────────────────
PRODUCT_SERVICE_PORT=4002
PRODUCT_CACHE_TTL=300

# ── Order Service ────────────────────────────────────────────
ORDER_SERVICE_PORT=4003
ORDER_PROCESSING_TIMEOUT=30000

# ── PostgreSQL (Product Service) ─────────────────────────────
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cloudcart_products
POSTGRES_USER=cloudcart
POSTGRES_PASSWORD=changeme_postgres_password

# ── MongoDB (Auth & Order Services) ──────────────────────────
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=cloudcart
MONGO_USER=cloudcart
MONGO_PASSWORD=changeme_mongo_password
MONGO_URI=mongodb://cloudcart:changeme_mongo_password@mongodb:27017/cloudcart?authSource=admin

# ── RabbitMQ ─────────────────────────────────────────────────
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672
RABBITMQ_USER=cloudcart
RABBITMQ_PASSWORD=changeme_rabbitmq_password
RABBITMQ_URL=amqp://cloudcart:changeme_rabbitmq_password@rabbitmq:5672

# ── Redis (Caching) ─────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password

# ── Monitoring ───────────────────────────────────────────────
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_PORT=9090

# ── Frontend ─────────────────────────────────────────────────
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:80/api
